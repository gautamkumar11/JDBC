package com.jspiders.jdbc.first;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import com.mysql.jdbc.Driver;

public class MyFirstJdbcProgram {

	public static void main(String[] args) {
		try {
			Driver driverref = new Driver();
			DriverManager.deregisterDriver(driverref);
			
			String dburl = "jdbc:mysql://localhost3306/bejm37?user=root&password=root";
			Connection CON = DriverManager.getConnection(dburl);
			
			/*	jdbc:mysql://[host][,failoverhost...][:port]/[database] »
			[?propertyName1][=propertyValue1][&propertyName2][=propertyValue2]...
		*/
			
			String query= " insert into studentsinfo "
						   + "values(?,?,?,?)";
			PreparedStatement	pstmnt	=	CON.prepareStatement(query);
			
				int res	= pstmnt.executeUpdate(query);
		} catch (SQLException e) {
			
			e.printStackTrace();
		}
	}
}
